<% layout('layouts/app') %> <%- include('../layouts/components/thumbnailPlace')
%>
<div class="container mt-5 mb-5">
  <div class="row pt-5 pb-3">
    <div class="col-sm-6">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Details Place</h1>
        <% if(currentUser && place.author.equals(currentUser._id)) { %>
        <div class="d-flex gap-2">
          <a href="/places/<%= place._id %>/edit/" class="btn btn-primary"
            >Edit</a
          >
          <!-- Button trigger modal -->
          <button
            type="button"
            class="btn btn-danger"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
          >
            Delete
          </button>
          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Delete Data Permanent
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  Apakah anda yakin ingin menghapus data <%= place.title %>?
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <form
                    action="/places/<%= place._id %>?_method=DELETE"
                    method="post"
                  >
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <ul class="my-3 bg-light p-3 rounded">
        <li class="mb-3">
          <span class="fw-bold">Description: </span><%= place.description %>
        </li>
        <li class="mb-3">
          <span class="fw-bold">Location: </span><%= place.location %>
        </li>
        <li class="mb-3">
          <span class="fw-bold">Author: </span>
          <%= formatUsername(place.author.username) %>
        </li>
        <li class="mb-3">
          <span class="fw-bold">Price: </span>
          <% if(place.price === 0) { %> <%= 'Gratis' %> <% } else { %> <%=
          formatRupiah(place.price) %> <% } %>
        </li>
      </ul>
    </div>
    <% if(!currentUser) { %>
    <div class="col-sm-6">
      <%- include('../layouts/components/reviews') %>
    </div>
    <% } %>
  </div>
  <% if(currentUser) { %>
  <div class="row mt-5 border-top pt-5">
    <div class="col-sm-4">
      <%- include('../layouts/components/formReview') %>
    </div>
    <div class="col-sm-8">
      <div class="row">
        <%- include('../layouts/components/reviews') %>
      </div>
    </div>
  </div>
  <% } %>
</div>
