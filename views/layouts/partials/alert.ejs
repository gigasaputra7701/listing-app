<% if(success_msg && success_msg.length){ %>
<div
  class="alert alert-success alert-dismissible fade show alert-custom"
  role="alert"
  id="successAlert"
>
  <strong><%= success_msg %></strong>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error_msg && error_msg.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show alert-custom"
  role="alert"
  id="successAlert"
>
  <%- error_msg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
